<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml">
    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="msgField" onAction="#sendMsgAction" promptText="Введите сообщение..." maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button onAction="#sendMsgAction" text="Send" minWidth="100"/>
    </HBox>
</VBox>